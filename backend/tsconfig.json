{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@sudoku/shared-types": ["../packages/shared-types/index.ts"],
      "@sudoku/shared-utils": ["../packages/shared-utils/index.ts"]
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["src"]
}
